{
  "manifest_version": 2,

  "name": "SchedEx",
  "description": "Automatically scrapes and formats your Punahou class schedule",
  "version": "0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "icons": {  "48": "icon48.png",
              "128": "icon128.png" },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "https://mybackpack.punahou.edu/*"
  ]
}
